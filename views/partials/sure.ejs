<style>
    
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        /* display: none; */
    }
    .hide{
        display: none;
    }
    .modal-content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        width: 320px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        position: relative;
        animation: fadeIn 0.3s ease-in-out;
    }
    
    .modal-buttons {
        margin-top: 15px;
        display: flex;
        justify-content: space-around;
    }
    
    .btn {
        padding: 10px 15px;
        border: none;
        background: #007bff;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s;
    }
    
    .btn:hover {
        background: #0056b3;
    }
    
    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
        color: #666;
    }
    
    .close-btn:hover {
        color: black;
    }
    
    /* Animation */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    </style>
    <auth>
    
        <div id="authModal" class="modal-overlay hide">
            <div class="modal-content">
                <p>You need to sign in First</p>
                <div class="modal-buttons">
                    <a href="/" class="btn">Yes</a>
                    <a href="/user/signup" class="btn">Cancel</a>
                </div>
    
    
                <button class="close-btn" onclick="closeModal()">Ã—</button>
            </div>
        </div>
