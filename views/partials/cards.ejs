<style>
    .blog-container {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
    padding: 20px;
}

.card {
    width: 320px;
    border-radius: 10px;
    overflow: hidden;
    background: #fff;
    transition: transform 0.3s ease-in-out;
    margin: 10px;
    position: relative; /* Ensures circles stay inside */
    box-shadow: 0 14px 16px rgba(0, 0, 0, 0.5);
}

.card:hover {
    transform: scale(1.05);
}

.card-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-top: 10px solid #ffffff; /* Top border */
    border-left: 6px solid #ffffff; /* Left border */
    border-right: 6px solid #ffffff; /* Right border */
    border-radius: 20px 20px 0 0; /* Smooth rounded corners */
}


.card-body {
    padding: 20px;
    text-align: center;
}

.card-title {
    font-size: 22px;
    margin-bottom: 12px;
    color: #333;
}

.card-text {
    font-size: 14px;
    color: #666;
}

.btn {
    display: inline-block;
    padding: 10px 14px;
    background: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    margin-top: 12px;
}

.btn:hover {
    background: #0056b3;
}

.views-circle, .likes-circle {
    position: absolute; /* Keeps inside the card */
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: bold;
    color: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

.views-circle {
    bottom: 10px;
    left: 10px;
    background: #007bff;
}

.likes-circle {
    bottom: 10px;
    right: 10px;
    background: #e63946;
}

</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


<div class="blog-container">
    <% blogs.forEach(blog => { %>
        <div class="card">
            <img src="<%= blog.coverImageURL %>" alt="Blog Cover" class="card-img">

            <div class="card-body">
                <h3 class="card-title"><%= blog.title %></h3>
                <p class="card-text"><%= blog.body.substring(0, 150) %>...</p>
                <a href="/blog/<%= blog._id %>" class="btn">Read More</a>
            </div>
            <div>
                
            </div>
                <div class="views-circle"><%= blog.views %> üëÄ</div>
                <div class="likes-circle"><%= blog.likes.length %> ‚ù§Ô∏è</div>
        </div>
    <% }); %>
</div>